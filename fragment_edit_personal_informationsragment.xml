<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInformationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Email :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvContact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSurname" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Ime :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSurname"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Prezime  :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Visina :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvWeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContact" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="Kontakt :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/tvHeight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:fontFamily="serif"
            android:gravity="center_horizontal|center_vertical"
            android:text="TeÅ¾ina :"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toTopOf="@+id/button_save_personal_informations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeight" />

        <TextView
            android:id="@+id/PersonalInformationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:backgroundTint="@color/bg"
            android:fontFamily="serif"
            android:text="Osobni podaci"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/line"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F3AA0202"
            android:gravity="center_horizontal"
            android:textSize="1sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PersonalInformationTitle" />


        <EditText
            android:id="@+id/etUserName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/etUserSurname"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/PersonalInformationTitle" />

        <EditText
            android:id="@+id/etUserSurname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/tvUserEmail"
            app:layout_constraintStart_toEndOf="@+id/tvSurname"
            app:layout_constraintTop_toBottomOf="@+id/etUserName" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/etUserContact"
            app:layout_constraintStart_toEndOf="@+id/tvEmail"
            app:layout_constraintTop_toBottomOf="@+id/etUserSurname" />

        <EditText
            android:id="@+id/etUserWeight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toTopOf="@+id/button_save_personal_informations"
            app:layout_constraintStart_toEndOf="@+id/tvWeight"
            app:layout_constraintTop_toBottomOf="@+id/etUserHeight" />

        <EditText
            android:id="@+id/etUserHeight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toTopOf="@+id/etUserWeight"
            app:layout_constraintStart_toEndOf="@+id/tvHeight"
            app:layout_constraintTop_toBottomOf="@+id/etUserContact" />

        <EditText
            android:id="@+id/etUserContact"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:background="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/etUserHeight"
            app:layout_constraintStart_toEndOf="@+id/tvContact"
            app:layout_constraintTop_toBottomOf="@+id/tvUserEmail" />

        <Button
            android:id="@+id/button_save_personal_informations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:text="Spremi promjene"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>